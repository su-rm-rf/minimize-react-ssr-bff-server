root = true # 控制配置文件 .editorconfig 是否生效的字段

[**] # 匹配全部文件
indent_style = tab # 缩进风格，可选space｜tab
indent_size = 2 # 缩进的空格数
tab_width = 2 # tab的空格数
end_of_line = lf # (on save)
insert_final_newline = false # 设为true表示使文件以一个空白行结尾(on save)
trim_trailing_whitespace = true # 删除一行中的前后空格(on save)
charset = utf-8 # 设置字符集

[**.md] # 匹配md文件
trim_trailing_whitespace = false
